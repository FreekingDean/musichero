<%= form_with(model: track_tag, class: "contents") do |form| %>
  <% if track_tag.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(track_tag.errors.count, "error") %> prohibited this track_tag from being saved:</h2>

      <ul class="list-disc ml-6">
        <% track_tag.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :track_id %>
    <%= form.text_field :track_id, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": track_tag.errors[:track_id].none?, "border-red-400 focus:outline-red-600": track_tag.errors[:track_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :tag_id %>
    <%= form.text_field :tag_id, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": track_tag.errors[:tag_id].none?, "border-red-400 focus:outline-red-600": track_tag.errors[:tag_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
